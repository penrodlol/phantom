---
import Label from '@phantom/ui/label.astro';
import Select from '@phantom/ui/select.astro';
import type { ComponentProps } from 'astro/types';

type Props = ComponentProps<typeof Select> & {
  selected: string | undefined;
  options: ReadonlyArray<string>;
};

const { name, selected, options, ...props } = Astro.props;
---

<div class="mb-3 flex flex-col gap-1">
  <Label for={`playground-${name}`} class="capitalize">{name}</Label>
  <!-- @ts-ignore -->
  <Select {...props} {name} id={`playground-${name}`}>
    {
      options.map((option) => (
        <option value={option} selected={option === selected}>
          {option}
        </option>
      ))
    }
  </Select>
</div>
